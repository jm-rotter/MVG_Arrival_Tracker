<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:TrainApp.ViewModels"
             x:Class="TrainApp.Views.WisdomView"
             x:DataType="vm:WisdomViewModel">

    <Border Background="#1a1a1a" 
            CornerRadius="12" 
            Padding="20" 
            Margin="10"
            BorderBrush="#333" 
            BorderThickness="1"
            BoxShadow="5 5 10 0 #000000">
        
        <Grid RowDefinitions="Auto, *, Auto">
            
            <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="8" Margin="0,0,0,15">
                <PathIcon Data="{StaticResource lightbulb_outline_regular}" 
                          Foreground="#FFCC00" 
                          Width="16"/>
                <TextBlock Text="WISDOM" 
                           FontSize="12" 
                           FontWeight="SemiBold" 
                           Foreground="#888" 
                           LetterSpacing="2"/>
            </StackPanel>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <TextBlock Text="{Binding WisdomText}" 
                           Foreground="White" 
                           FontSize="18" 
                           FontWeight="Light"
                           FontStyle="Italic"
                           TextWrapping="Wrap" 
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           LineHeight="26"/>
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>