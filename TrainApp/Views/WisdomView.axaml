<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:TrainApp.ViewModels"
             x:Class="TrainApp.Views.WisdomView"
             x:DataType="vm:WisdomViewModel">

    <Border Background="#1a1a1a" 
            CornerRadius="12" 
            Padding="20" 
            Margin="10"
            BorderBrush="#333" 
            BorderThickness="1"
            BoxShadow="5 5 10 0 #000000">
        
        <Grid RowDefinitions="Auto, *, Auto">

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <TextBlock Text="{Binding WisdomText}" 
                           Foreground="White" 
                           FontSize="18" 
                           FontWeight="Light"
                           FontStyle="Italic"
                           TextWrapping="Wrap" 
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           LineHeight="26"/>
            </ScrollViewer>

            <TextBlock Grid.Row="2" 
                       Text="{Binding WisdomPerson}" 
                       FontSize="14" 
                       Foreground="#969696" 
                       HorizontalAlignment="Right"
                       Margin="0,15,0,0"/>
        </Grid>
    </Border>
</UserControl>